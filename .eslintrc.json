{
  // parser have to be kept in package.json to make it working
  //"parser": "babel-eslint",

  // for eslint + flowtype parser have to be here too  - what a mess.....
  "parser": "babel-eslint",

  "plugins": [
    "babel",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
    ,"no-unused-vars": "off"
    ,"no-unreachable": "off"
    ,"no-console": "off"
  }
}